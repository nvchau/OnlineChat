<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= pageTitle %></title>
    <% include ../../layouts/stylesheet %>
    <% include ../../layouts/script %>
</head>
<body>
    <br>
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6 form">
                <form action="/login" id="loginForm" method="POST" class="form-horizontal" role="form">
                    <div class="form-group">
                        <div class="title">
                            <legend><b>WebChat</b></legend>
                        </div>
                    </div>
        
                    <% if(errorMessage) {%>
                        <div class="alert alert-danger">
                            <p><%= errorMessage %></p>
                        </div>
                    <%}%>
                    
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="text" name="email" class="form-control" id="email" placeholder="Input your email address" />
                    </div>
        
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" class="form-control" id="password" placeholder="Input your password" />
                    </div>
                    
                    <div class="form-group">
                        <div class="checkbox">
                            <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                            <button type="submit" onclick = "return validateForm(event)" class="btn btn-primary pull-right">Login</button>
                        </div>
                    </div>
                </form>
                <br>
                <a href="/register">Create new account</a>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</body>

<script>
    function validateForm(event) {
        var email = document.getElementById("email").value;
        var password = document.getElementById("password").value;

        if(email == ""){
            var mess = '<b>Please enter your e-mail!</b>';
            alertify.error(mess);
            return false;
        }
        else if(password == "") {
            var mess = '<b>Please enter your password!</b>';
            alertify.error(mess);
            return false;
        }
        else {
            $('#loginForm').submit();
            return true;
        }
    }
</script>

</html>

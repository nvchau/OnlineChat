<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= pageTitle %></title>
    <% include ../../layouts/stylesheet %>
    <% include ../../layouts/script %>
</head>
<body>
    <br>
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6 form">
                <form action="/register" id="registerForm" method="POST" class="form-horizontal" role="form">
                    <div class="form-group">
                        <div class="title">
                            <legend><b>WebChat</b></legend>
                        </div>
                    </div>
            
                    <div class="form-group">
                        <b>Create a new account</b>
                    </div>
    
                    <% if(errorMessage) {%>
                        <div class="alert alert-danger">
                            <p><%= errorMessage %></p>
                        </div>
                    <%}%>
    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                <label for="firstname">First Name</label>
                                <input type="text" name="firstname" class="form-control" id="firstname" placeholder="Please input first name" />
                            </div>
                            <div class="col-sm-6">
                                <label for="lastname">Last Name</label>
                                <input type="text" name="lastname" class="form-control" id="lastname" placeholder="Please input last name" />
                            </div>
                        </div>
                    </div>
    
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="text" name="email" class="form-control" id="email" placeholder="Please input email address" />
                    </div>
    
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" class="form-control" id="password" placeholder="Please input password" />
                    </div>
    
                    <div class="form-group">
                        <label for="confirmpassword">Confirm Password</label>
                        <input type="password" name="confirmpassword" class="form-control" id="confirmpassword" placeholder="Please retype password" />
                    </div>
    
                    <div class="form-group">
                        <!-- <label>
                            <input type="checkbox" name="accept" value="1" /> I have read and agree to the Terms
                        </label> -->
                        <div class="checkbox">
                            <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                            <button type="submit" onclick = "return validateForm(event)" class="btn btn-primary pull-right">Register</button>
                        </div>
                    </div>
                </form><br>
                <a href="/login">I already have an account</a>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</body>

<script>
    function validateForm(event) {
        var firstname = document.getElementById("firstname").value;
        var lastname = document.getElementById("lastname").value;
        var email = document.getElementById("email").value;
        var password = document.getElementById("password").value;
        var confirmpassword = document.getElementById("confirmpassword").value;

        if(firstname == ""){
            var mess = '<b>Please enter your firstname!</b>';
            alertify.error(mess);
            return false;
        }
        else if(lastname == "") {
            var mess = '<b>Please enter your lastname!</b>';
            alertify.error(mess);
            return false;
        }
        else if(email == ""){
            var mess = '<b>Please enter your e-mail!</b>';
            alertify.error(mess);
            return false;
        }
        else if(password == "") {
            var mess = '<b>Please enter your password!</b>';
            alertify.error(mess);
            return false;
        }
        else if(confirmpassword == "") {
            var mess = '<b>Please enter confirm password!</b>';
            alertify.error(mess);
            return false;
        }
        else {
            $('#registerForm').submit();
            return true;
        }
    }
</script>

</html>